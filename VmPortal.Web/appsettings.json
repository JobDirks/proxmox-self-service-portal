{
    "AzureAd": {
        "Instance": "https://login.microsoftonline.com/",
        "TenantId": "YOUR_TENANT_ID",
        "ClientId": "YOUR_CLIENT_ID",
        "ClientSecret": "YOUR_CLIENT_SECRET",
        "CallbackPath": "/signin-oidc"
    },
    "Proxmox": {
        "BaseUrl": "https://10.10.11.46:8006",
        "DevIgnoreCertErrors": true,
        "Tags": {
            "ManagedVmTag": "vmportal-managed",
            "TemplateTag": "vmportal-template",
            "TemplateNameTagPrefix": "tmpl-"
        }
    },
    "Security": {
        "SessionTimeoutMinutes": 480,
        "EncryptSensitiveFields": true,
        "EnableSecurityLogging": true,
        "SecurityEvents": {
            "Retention": {
                "RetentionDays": 365,
                "CleanupIntervalHours": 24
            }
        }
    },
    "VmResourceLimits": {
        "MaxDiskGiB": 120,
        "MaxCpuCores": 8,
        "MaxMemoryMiB": 16384
    },
    "ConnectionStrings": { "Default": "Data Source=./data/vmportal.db" },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}
